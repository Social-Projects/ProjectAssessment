@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
}
<div ng-app="Assessments" ng-controller="CriteriaSamplesController">
    
        <p>Area: <a ui-sref="Areas({ Id: Area.AssesmentTypeId })">{{Area.Name}}</a></p>

        <h1 class="admin">Criteria</h1>

        <table class="tableSS">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Order</th>
                    <th>Scope</th>
                    <th>Time</th>
                    <th>Quality</th>
                    <th>Cost</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tb">
                <tr ng-repeat="crit in Criteria | orderBy:'Order'">
                    <td>{{crit.Id}}</td>
                    <td><textarea rows="1" class="noborder" ng-model="crit.Name" ng-blur="Update(crit)" /></td>
                    <td><textarea class="noborder" rows="1" ng-model=" crit.Order" ng-blur="Update(crit)" /></td>
                    <td>
                        <select ng-options="Impact.Id as Impact.Name for Impact in Impacts" ng-model="crit.ScopeConstraintImpactId"
                                class="noborder"
                                ng-change="Update(crit)"></select>
                    </td>
                    <td>
                        <select ng-options="Impact.Id as Impact.Name for Impact in Impacts" class="noborder"
                                ng-model="crit.TimeConstraintImpactId" ng-change="Update(crit)"></select>
                    </td>
                    <td>
                        <select ng-options="Impact.Id as Impact.Name for Impact in Impacts" class="noborder"
                                ng-model="crit.QualityConstraintImpactId" ng-change="Update(crit)"></select>
                    </td>
                    <td>
                        <select ng-options="Impact.Id as Impact.Name for Impact in Impacts" class="noborder"
                                ng-model="crit.CostConstraintImpactId" ng-change="Update(crit)"></select>
                    </td>
                    <td><a ui-sref="IndicatorSamples({ Id: {{crit.Id}} })">Indicators</a></td>
                    <td ng-click="Up(crit)">&#8679</td>
                    <td ng-click="Down(crit)">&#8681</td>
                    <td><button class="btn btn-default btn-sm" ng-click="startForm(crit)"><span class="glyphicon glyphicon-remove"></span> Delete</button></td>
                </tr>
            </tbody>
        </table>
    <div class="admin">
    <button  ng-click="startForm2(currentId,Criteria.length)"><span class="glyphicon glyphicon-plus"></span>Add Criteria</button>
   </div>
     </div>


