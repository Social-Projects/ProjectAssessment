@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
}
<div ng-app="Assessments" ng-controller="AreasController">
    <p>Assessment Type: {{ass.Name}}</p>
   
        <h1 class="admin">Areas</h1>
        
        <table class="tableSS">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                    <th>Order</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tb">
                <tr ng-repeat="area in Areas | orderBy:'Order'">
                    <td>{{area.Id}}</td>
                    <td><textarea class="noborder" rows="1" ng-model="area.Name" ng-blur="Update(area)" /></td>
                    <td><textarea class="noborder" rows="1" ng-model="area.Description" ng-blur="Update(area)" /></td>
                    <td><a ui-sref="CriteriaSamples({ Id: {{area.Id}} })">Criteria</a></td>
                    <td><textarea class="noborder" rows="1" ng-model="area.Order" ng-blur="Update(area)" /></td>
                    <td ng-click="Up(area)">&#8679</td>
                    <td ng-click="Down(area)">&#8681</td>
                    <td><button class="btn btn-default btn-sm" ng-click="startForm(area)"><span class="glyphicon glyphicon-remove"></span> Delete</button></td>
                </tr>
            </tbody>
        </table>
    <div class="admin">
        <button  ng-click="startForm2(ass.Id,Areas.length)"><span class="glyphicon glyphicon-plus"></span>Add area</button>
        </div>
    </div>

