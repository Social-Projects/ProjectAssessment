@inherits System.Web.Mvc.WebViewPage


<div ng-app="Assessments" ng-controller="RecommendationsController">
    <div ng-show="Recommendations.length">

        <h3 ng-show="Assessment.length">{{Assessment}}</h3>

        <table class="tableSS">
            <thead>
                <tr>
                    <th>Criterion</th>
                    <th>Text</th>
                    <th colspan="2" >Benefits</th>
                </tr>
            </thead>
            <tbody ng-repeat="a in Recommendations">
                <tr>
                    <td class="col-lg-3">
                        {{a.Name}}
                        @*<a href="/" class="glyphicon glyphicon-triangle-bottom">s</a>
                        <a href="/" class="glyphicon glyphicon-triangle-down">s</a>*@
                    </td>
                    <td class="col-lg-3">
                        <textarea class="form-control">{{a.Text}}</textarea>
                    </td>
                    <td class="col-lg-3">
                        <textarea class="form-control"> {{a.Benefits}}</textarea>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <h3 ng-show="Recommendations.length == 0">No Information</h3>
</div>
